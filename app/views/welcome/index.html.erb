<!-- app/views/welcome/index.html.erb-->

<!--javascript pack -->
<div id="welcome"></div>
<%= javascript_pack_tag 'welcome' %> 

<p>Create your own recipe or find the perfect recipe ideas for every ocassion, from weeknight dinners to holiday feasts.</p>



</br>
<!-- flash alert - to reflect the alert code in search method in WelcomeController-->
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
    <div class="mx-auto mt-5" style="width: 400px">
        
<!-- recipesearch form - form for user to enter search for recipe-->        
<div class="recipesearch-form">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :recipesearch, 'Search for a recipe' %>
            <%= text_field_tag :recipesearch, nil, placeholder: 'Eg. Burger', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div><!--end of sizing-->
    </div><!--end of col-->
  </div><!--end of row-->
</div><!--end of recipesearch-form -->

</br>


